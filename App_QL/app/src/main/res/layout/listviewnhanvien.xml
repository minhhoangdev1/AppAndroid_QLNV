<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="name nv"
            android:id="@+id/txtTennv"
            android:textSize="25sp"
            android:textColor="#142327"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:text="Giới tính: "
                android:textColor="#8F969A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtGioitinhnv"
                android:textSize="20sp"
                android:textColor="#8F969A"
                android:text="sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:src="@drawable/ic_baseline_info_24"
        android:layout_marginTop="25dp"
        android:id="@+id/InfoNhanvien"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <ImageButton
        android:src="@drawable/ic_baseline_wysiwyg_24"
        android:layout_marginTop="25dp"
        android:id="@+id/XemHopdongnv"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <ImageButton
        android:id="@+id/Updatenhanvien"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_edit_24" />

    <ImageButton
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/DeleteNhanvien"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
</LinearLayout>